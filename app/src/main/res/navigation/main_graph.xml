<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/auth_graph">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dvm.splash.SplashFragment"
        android:label="SplashFragment" />

    <include app:graph="@navigation/menu_graph" />
    <action
        android:id="@+id/toMain"
        app:destination="@id/menu_graph" />
    <action
        android:id="@+id/toMenu"
        app:destination="@id/menuFragment" />

    <include app:graph="@navigation/dish_graph" />
    <action
        android:id="@+id/toDish"
        app:destination="@id/dish_graph">
        <argument
            android:name="dishId"
            app:argType="string" />
    </action>

    <include app:graph="@navigation/auth_graph" />
    <action
        android:id="@+id/toAuth"
        app:destination="@id/auth_graph" />

    <include app:graph="@navigation/cart_graph" />
    <action
        android:id="@+id/toCart"
        app:destination="@id/cart_graph" />

<!--    <include app:graph="@navigation/orders_graph" />-->
<!--    <action-->
<!--        android:id="@+id/toOrders"-->
<!--        app:destination="@id/orders_graph" />-->

    <fragment
        android:id="@+id/orderingFragment"
        android:name="com.dvm.order.ordering.OrderingFragment"
        android:label="OrderingFragment"/>
    <action
        android:id="@+id/toOrdering"
        app:destination="@id/orderingFragment" />

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dvm.menu.main.FavoriteFragment"
        android:label="FavoriteFragment" />
    <action
        android:id="@+id/toFavorite"
        app:destination="@id/favoriteFragment" />


    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.dvm.notifications.NotificationFragment"
        android:label="NotificationFragment" />
    <action
        android:id="@+id/toNotifications"
        app:destination="@id/notificationFragment" />


    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dvm.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <action
        android:id="@+id/toProfile"
        app:destination="@id/profileFragment" />




    <action
        android:id="@+id/toOrders"
        app:destination="@id/ordersFragment" />

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.dvm.order.orders.OrdersFragment"
        android:label="OrdersFragment">
        <action
            android:id="@+id/toOrder"
            app:destination="@id/orderFragment" >
            <argument
                android:name="orderId"
                app:argType="string" />
        </action>
    </fragment>


    <fragment
        android:id="@+id/orderFragment"
        android:name="com.dvm.order.order.OrderFragment"
        android:label="OrderFragment" />



</navigation>
