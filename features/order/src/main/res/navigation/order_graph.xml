<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_graph"
    app:startDestination="@id/orderingFragment">


    <fragment
        android:id="@+id/orderingFragment"
        android:name="com.dvm.order.ordering.OrderingFragment"
        android:label="OrderingFragment" >
        <action
            android:id="@+id/toOrders"
            app:destination="@id/ordersFragment" />
    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.dvm.order.orders.OrdersFragment"
        android:label="OrdersFragment" >
        <action
            android:id="@+id/toOrder"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.dvm.order.order.OrderFragment"
        android:label="OrderFragment" />
</navigation>