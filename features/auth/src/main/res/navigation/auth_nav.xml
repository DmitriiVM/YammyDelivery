<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dvm.auth.auth_impl.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_passwordRestoreFragment"
            app:destination="@id/passwordRestoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordRestoreFragment"
        android:name="com.dvm.auth.auth_impl.restore.PasswordRestoreFragment"
        android:label="fragment_password_restore"
        tools:layout="@layout/fragment_password_restore" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dvm.auth.auth_impl.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>