CREATE TABLE IF NOT EXISTS notification(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    text TEXT NOT NULL,
    seen INTEGER AS Boolean
);


notifications:
SELECT *
FROM notification;


count:
SELECT COUNT()
FROM notification
WHERE seen = 0;


setSeen:
UPDATE notification
SET seen = 1
WHERE id IN (:id);


insert:
INSERT OR REPLACE INTO notification(
    title,
    text,
    seen
)
VALUES (?, ?, ?);